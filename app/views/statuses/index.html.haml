- title 'Timeline Viewer - Index'

.status-index
  .container
    .content
      .row
        .span16
          %table{:class => "condensed-table zebra-striped"}
            %thead
              %tr
                %th No
                %th Created
                %th SN(P)/UID
                %th FF
                %th Text
            %tbody
              - seq = 0
              - @statuses.each do |status|
                - seq += 1
                %tr
                  %td
                    = seq
                  %td
                    = link_to status.created_at.strftime("%Y/%m/%d %X"), edit_status_path(status)
                  %td
                    = link_to status.screen_name, "/statuses?screen_name=" + status.screen_name.to_s unless status.screen_name.nil?
                    = status.protected ? '*' : ''
                    %br
                    = link_to status.uid, "/statuses?uid=" + status.uid.to_s unless status.id.nil?
                  %td
                    = status.friends_count
                    = status.followers_count
                  %td
                    = status.text

          = paginate @statuses, :window => 5000, :outer_window => 0
